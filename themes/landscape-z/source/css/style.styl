@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  min-height: 100%
body
  position: relative
  font: font-size font-sans
  -webkit-text-size-adjust: 100%
  background: color-background
  // &:before
  //   content: ''
  //   position: fixed
  //   display: block
  //   width: 100vw
  //   height: 100vh
  //   bottom: -20px
  //   background: color-background url("./images/girlpan.svg") no-repeat 100% 120%
  //   z-index: -2
  //   transition: 0.4s
a 
  text-decoration: none
  cursor pointer
  &:hover
    text-decoration: underline
:root 
    -webkit-tap-highlight-color:rgba(0,0,0,0);
.can-touch 
  #toTopBtn
    &:hover
      color: #aaaaaa
  .toc-link 
    span 
      &:hover
        color: inherit !important
  #toc-icon
    &:hover 
      border-left: 2px solid color-grey
      color: color-grey
      ~ #toc-box
        border-left: 2px solid color-grey
    
.toc-link:-webkit-any-link {
  color: inherit
}
.outer
  min-height: 100vh
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 72px gutter-width
  @media mq-mobile
    padding: 72px 0
.noselect 
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none; /* Chrome/Safari/Opera */
  -khtml-user-select: none; /* Konqueror */
  -moz-user-select: none; /* Firefox */
  -ms-user-select: none; /* Internet Explorer/Edge */
  user-select: none; /* Non-prefixed version */

#toTopBtn
  position: fixed
  right 0
  top: 70%
  font-size: 30px
  color: #aaaaaa
  opacity 0
  transition: .4s 
  &:hover
    color: color-link
  @media mq-mobile
    display: none

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative
  min-height: 100vh
.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  // background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

