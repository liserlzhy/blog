#footer 
    background: #202125
    color: #eee
    display: flex
    #right-footer
        flex: 2
        text-align: center
        #social-media-footer
            ul
                display: flex
                list-style: none
                justify-content: center
                padding: 0
                li
                    font-size: 48px
                    transition: 0.4s
                    .icon-github
                        color: #ffffff;
                        transition: 0.4s
                        ^[-1]:hover .icon-github
                            text-decoration: none
                            color: #bbb

    @media mq-mobile
        flex-direction: column


