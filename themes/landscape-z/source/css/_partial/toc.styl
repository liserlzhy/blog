.toc-article

  max-width: 100%
.toc-title
  font-size: 120%
  color: color-toc
  font-weight: bold
#toc
  display: block
  max-height 80vh
  overflow-y: auto
  overflow-x: hidden
  padding-top: 10px
  line-height: 1em
  font-size: 0.9em
  color: color-link
  position: fixed
  left: 3px
  opacity: 1
  transition: opacity transform .4s
  @media mq-ltablet
    opacity: 0
    transform: translateX(-100%)
    pointer-events: none
  &::-webkit-scrollbar 
    width:10px
    height:10px
    background-color:transparent
    
  &-box
    width: 180px
    position relative
    padding:1em 1em 0 1em
    border-left: 2px solid #999
  &-icon
    color: #999
    position relative
    border-left: 2px solid #999
    font-size: 20px
    &:hover 
       border-left: 2px solid color-link
       color: color-link
       ~ #toc-box
        border-left: 2px solid color-link
  .toc
    padding: 0
    margin: 1em
    line-height: 1.5em
    li
      list-style-type: none
      .toc-link 
        color: color-toc
        span 
          display inline-block
          width: 180px
          overflow hidden
          text-overflow: ellipsis
          white-space: nowrap
          &:hover  
            color: red
  .toc-child 
    margin-left: 1em

.toc-post
  overflow-x: hidden
  >article
    position: relative 
    transition: .4s
    left: 200px
    padding-right: 200px
    @media mq-ltablet
      left: 0 !important
      padding-right: 0 !important

  /*IE滚动条颜色设置*/
body, .search-result-list {
    scrollbar-arrow-color:#f2f2f3;  /*上下箭头*/
    scrollbar-track-color:#1589ce;  /*底层背景色*/
    scrollbar-face-color:#27aeff;   /*滚动条前景色*/
    scrollbar-Shadow-color:#1589ce; /*滚动条边线色*/
}
/*chrome滚动条颜色设置*/
body::-webkit-scrollbar {width:10px; height:10px; background-color:transparent;}
body::-webkit-scrollbar-thumb {background-color:#555; border-radius:10px; -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,.3);} 
body::-webkit-scrollbar-track {background-color:#ccc; border-radius:10px; -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.3);} 
.search-result-list::-webkit-scrollbar{width:5px; height:10px; background-color:#fff;}
.search-result-list::-webkit-scrollbar-track{background-color:#ccc; border-radius:10px; -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,.3);} 
.search-result-list::-webkit-scrollbar-thumb{background-color:#28f7bc; border-radius:10px; -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.3);} 