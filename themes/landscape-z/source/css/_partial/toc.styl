.toc-article

  max-width: 100%
.toc-title
  font-size: 120%
  color: color-toc
  font-weight: bold
#toc
  width: 200px
  display: block
  padding-top: 10px
  line-height: 1em
  font-size: 0.9em
  color: color-link
  position: fixed
  overflow: hidden
  box-sizing: content-box
  left: 3px
  opacity: 1
  transition: opacity transform .4s
  @media mq-ltablet
    opacity: 0
    transform: translateX(-100%)
    pointer-events: none
  &::-webkit-scrollbar 
    width:10px
    height:10px
    background-color:transparent
    
  &-box
    width: 100%
    height: 100%
    padding:1em 1em 0 1em
    border-left: 2px solid color-grey
  &-icon
    color: color-grey
    position relative
    border-left: 2px solid color-grey
    font-size: 20px
    &:hover 
       border-left: 2px solid color-link
       color: color-link
       ~ #toc-box
        border-left: 2px solid color-link
  .toc
    height: 100% - 10px
    overflow-y: scroll
    overflow-x: hidden
    padding: 0
    margin: 1em
    margin-right: -50px
    padding-right: 50px
    line-height: 1.5em
    li
      list-style-type: none
      .toc-link 
        color: color-toc 
        span 
          display inline-block
          width: 180px
          overflow hidden
          text-overflow: ellipsis
          white-space: nowrap
          &:hover  
            color: color-link

  .toc-child 
    margin-left: 1em
.toc-post
  overflow-x: hidden
  >article
    position: relative 
    transition: .4s
    left: 200px
    padding-right: 200px
    @media mq-ltablet
      left: 0 !important
      padding-right: 0 !important

