#header  
    width: 72px
    position relative
    top: 0
    opacity 1
    transition: 0.3s
    input
        height: 32px
        padding: 0 16px
        font-family: 'Roboto Condensed', sans-serif
        font-size: 20px
        border: none
        box-shadow: inset 8px 3px 10px -4px rgba(0, 0, 0, 0.4)
        &:focus
                outline: none
    >.site_search
        position: fixed
        right: -500px
        top: 72px
        width: 500px
        pointer-events: none
        z-index: 50
        transition: 0.4s
        input 
            height: 48px
            width: 100%
            box-sizing: border-box
    #header-nav 
        height: 72px
        background: #202125
        width: 100%
        margin: 0
        position: fixed
        font-family: 'Roboto Condensed', sans-serif
        font-size: 20px
        display: flex
        justify-content: space-between
        padding: 0 16px 0 0
        box-sizing: border-box
        z-index: 100
        a 
            padding: 0 32px
            color: #eee
            transition: 0.4s
            &:hover
                text-decoration: none
                color: #00b8ff
        ul 
            display: flex
            list-style: none
            justify-content: space-around
            align-items: center
            height: 100%
            margin: 0
            @media mq-ltablet
                display: none
            #search-icon 
                color: white;
                cursor: pointer;
                transition: .4s;
                &:hover 
                    color: color-link;

        #logo-img 
            display: flex
            height: 100%
            align-items: center
            color: white
            transition: .4s
            img {
                height: 72px
            }
        #menu-icon 
            height: 100%
            font-size: 28px
            padding: 0 4px
            color: #eee
            display: none
            align-items: center
            @media mq-ltablet 
                display: flex
    #slideout-menu 
        display: none
        background: #2d3436
        z-index: 100
        position: fixed
        transition: 0.4s
        margin-top: 72px
        width: 100%
        text-align: center
        opacity: 0
        pointer-events: none
        @media mq-ltablet 
            display: block
        ul
            list-style: none
            padding: 0 32px
            li 
                padding: 8px
                .main-nav-link 
                    font-family: 'Roboto Condensed,', sans-serif
                    font-size: 20px
                    color: white

                input 
                    width: 85%
                    padding: 8px
                    font-family: "Roboto Condensed", serif
                    font-size: 20px
                    text-align: center
    .search-result-list 
        background: #2d3436
        color: #eee;
        max-height 60vh
        overflow-y: auto
        li
            padding: 10px;
            border-bottom: 1px solid #adaaa9
            a.search-result-title 
                font-weight: bold
                color: #28f7bc
            .search-result{
                text-overflow: ellipsis
                overflow hidden
            }
    >.site_search
        @media mq-ltablet
            opacity: 0
            transform: translateX(100%)
            transition: .4s      

.on-off
    position relative
    top: 5px
    left: 20px
    width: 60px
    height: 24px
    border-radius: 15px
    background-color #fff 
    border-bottom: 1px solid #fff
    box-shadow:inset 0 0 6px -3px #000000, 0 -5px 0 5px #ffffff
    cursor pointer
    animation: bounce 3s ease-in-out infinite
    &:after
        font-family: font-icon
        content: '\f005'
        display block
        position absolute
        top: -20px
        left: -6px
        width: 120%
        height 80%
        text-align: center
        font-size: 10px
        line-height: 20px
        border-radius: 50%
        border-bottom: 8px double transparent
        inset 0 1px 2px -1px rgba(255,255,255,0.3)
        background: radial-gradient(top, #d9f4f4, #29bcb2, #15554b)
    @keyframes bounce       
        40%
            transform: translateY(-20%)
        60% 
            transform: translateY(20%)    
        80% 
            transform: translateY(0%)

    &:before
        content: ''
        position absolute
        left 4px
        right 4px
        top: 4px
        bottom: 4px
        border-radius: 15px
        box-shadow: inset 0 0 0 1px #333, inset 0 0 3px 1px #333
        border-top: 1px solid #fff
        border-bottom: 1px solid #fff
        background: #00b8ff
        transition: .4s
    input 
        display: none
        &:checked 
            ~.on-off-circle
                &:before 
                    content: '\f053'
                &:after
                    content: '\f054'
            
    &-circle
        font-family: font-icon        
        &:before
        &:after
            content: '\f185'
            color: #00b8ff
            position absolute
            top: 1px
            display: block
            width: 20px
            height 20px
            font-size: 10px
            line-height: 20px
            text-align: center
            background: black
            border-radius: 50%
            box-shadow: inset 0 0 6px -3px #00b8ff
            border-top: 1px solid #fff
            border-bottom: 1px solid #fff 
            transition: .4s
            animation: eyeScale 2s infinite
            @keyframes eyeScale       
                0%
                    font-size: 8px
                100%
                    font-size: 10px
        &:before
            left: 36px
        &:after
            left: 3px
 

      
